{
  "name": "nextjs-deepv-docs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "migrate:content": "node scripts/migrate-content.js",
    "setup:content-repo": "bash scripts/setup-content-repo.sh",
    
    "validate:content": "node scripts/validate-content.js ../nextjs-deepv-content/staging/guides ./config/content-schema.json",
    "validate:index": "node scripts/validate-article-index.js ../nextjs-deepv-content/staging/config/article-index-update.json ./config/article-index-schema.json ./content/config/categories.json",
    "validate:all": "npm run validate:content && npm run validate:index",
    "promote:content": "node scripts/promote-content.js ../nextjs-deepv-content",
    "deploy:vercel": "vercel --prod"
  },
  "dependencies": {
    "@types/mdx": "^2.0.13",
    "gray-matter": "^4.0.3",
    "next": "15.5.3",
    "next-mdx-remote": "^5.0.0",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
